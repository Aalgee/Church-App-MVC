@model IEnumerable<DataObjects.User>



    <h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create") <br />
    @if (ViewBag.Active)
    {
        @Html.ActionLink("View Inactive Users", "Index", new { active = false })
    }
    else
    {
        @Html.ActionLink("View Active Users", "Index")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PersonID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @if (item.Dob != DateTime.MinValue)
        {
            @item.Dob.ToShortDateString();
        }

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    
    
    <td>
        @Html.ActionLink("Edit", "EditUser", new { id = item.PersonID })
        @Html.ActionLink("Details", "Details", new { id = item.PersonID })
        @if (ViewBag.Active)
        {
            @Html.ActionLink("Deactivate", "DeactivateUser", new { id = item.PersonID })
        }
        else
        {
            @Html.ActionLink("Reactivate", "ReactivateUser", new { id = item.PersonID })
        }
    </td>
</tr>
}

</table>
